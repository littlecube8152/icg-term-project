#include "compute/ray.comp"
#include "compute/interval.comp"


bool Metal_scatter(Metal metal, Ray ray, inout HitRecord record) {
    vec3 reflected = reflect(ray.direction, record.normal);
    record.scattered_ray = Ray(vec4(record.coord, 0.0), reflected, Interval_positive);
    record.attenuation = metal.albedo;
    return dot(reflected, record.normal) > 0.0f;
}
