#include "compute/ray.comp"
#include "compute/uniforms.comp"
#include "compute/objects/object_types.h"
#include "compute/objects/sphere.comp"
#include "compute/objects/cube.comp"


bool Object_hit(int object_id, Ray ray, out HitRecord record) {
    switch (objects[object_id].object_type) {
        case OBJECT_TYPE_SPHERE:
            return Sphere_hit(objects[object_id].sphere, ray, record);
        case OBJECT_TYPE_CUBE:
            return Cube_hit(objects[object_id].cube, ray, record);
        default:
            return false;
    }
}
